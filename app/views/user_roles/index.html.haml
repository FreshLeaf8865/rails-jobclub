.container.mt-5.mb-5
  %h1 Your Roles

  %table.table
    %thead
      %tr
        %th Role
        %th
        %th

    %tbody
      - @user_roles.each do |user_role|
        %tr
          %td= user_role.role.name
          %td= link_to 'Edit', edit_user_role_path(user_role)
          %td= link_to 'Destroy', user_role, :method => :delete, :data => { :confirm => 'Are you sure?' }

  %br

  = link_to 'New User Role', new_user_role_path
